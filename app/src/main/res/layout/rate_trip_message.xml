<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <!--TODO preencher content description-->
        <ImageView
            android:id="@+id/iv_rate_star_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="rateClick"
            android:src="@drawable/star_filled" />

        <ImageView
            android:id="@+id/iv_rate_star_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="rateClick"
            android:src="@drawable/star_blank" />

        <ImageView
            android:id="@+id/iv_rate_star_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="rateClick"
            android:src="@drawable/star_blank" />

        <ImageView
            android:id="@+id/iv_rate_star_4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="rateClick"
            android:src="@drawable/star_blank" />

        <ImageView
            android:id="@+id/iv_rate_star_5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="rateClick"
            android:src="@drawable/star_blank" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/bt_rate_trip_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="5dp"
            android:onClick="rateClick"
            android:background="@android:color/transparent"
            android:src="@drawable/confirmation_ok" />


    </LinearLayout>
</LinearLayout>
