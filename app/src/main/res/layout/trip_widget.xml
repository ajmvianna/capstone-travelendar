<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@color/theme_primary"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_trip_to_where_label_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/trip_to_where_label" />

            <TextView
                android:id="@+id/tv_trip_from_where_label_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/trip_from_where_label" />

            <TextView
                android:id="@+id/tv_trip_initial_date_label_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/trip_initial_date_label" />

            <TextView
                android:id="@+id/tv_trip_end_date_label_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/trip_end_date_label" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>